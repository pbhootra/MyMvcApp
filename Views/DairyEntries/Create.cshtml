@{
    ViewData["Title"] = "Create Dairy ";
}
@model DairyEntry
<div class=" container-24">

    <div class="row pt-4">
        <div class=" col-8 link-offset-2">
            <div class="card">
                <div class=" = card-header bg-primary text-light">
                    <h2>Create Dairy Entry : </h2>
                </div>
                <div class="card-body">

                    <form asp-action="" method="post">
                       <div asp-validation-summary="All" class="text-danger"></div>
                        <div class=" form-group mb-3">
                            <label asp-for="Title" class="form-lable">Title</label>
                            <input asp-for="Title" class="form-control" placeholder="Create a title" />
                            <span asp-validation-for="Title" class="text-danger" l></span>
                            <div class=" form-group mb-3">
                            <label asp-for="Content" row =" 5" class="form-lable">Content</label>
                            <input asp-for="Content" class="form-control" placeholder="Create a Content" />
                                <span asp-validation-for="Content" class="text-danger" l></span>
                            </div>
                            <div class=" form-group mb-3">
                            <label asp-for="Created" class="form-lable">Created</label>
                            <input asp-for="Created" class="form-control" type="date"  placeholder="Created Date" />
                                <span asp-validation-for="Created" class="text-danger" l></span>
                            </div>
                            <div class="d-flex justify-content-between">
                                <button class="btn-primary" type="submit" asp-controller="DairyEntries" asp-action="Create" >Create</button>
                                <a asp-controller="DairyEntries" asp-action="Index" class=" btn btn-secondary">Cancel</a>
                               
                            </div>
                        </div>

                    </form>

                </div>

            </div>

        </div>
    </div>
</div>
@section Scripts
{
    <partial name="_ValidationScriptsPartial.cshtml" />
}